{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<br/><br/>
    <div class="container">
        <h1> Voici vos livres et leurs classement Best Selling Rank </h1>
        <h5> {{ books|length }} livres inscrits</h5>
        <br/>
        
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">ASIN</th>
                <th scope="col">BSR</th>
                <th scope="col">Titre</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                    <th scope="row">#</th>
                    <td>{{ book.asin }}</td>
                    <td>{{ book.bsr }}</td>
                    <td>Titre</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
