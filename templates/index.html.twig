{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
<br/><br/>
    <div class="container">
        <h1> Voici vos livres et leurs classement Best Selling Rank </h1>
        <h5> {{ books|length }} livres inscrits</h5>
        <br/>
        
        <table class="table">
            <thead class="thead-dark">
                <tr>
                <th scope="col">#</th>
                <th scope="col">ASIN</th>
                <th scope="col">BSR</th>
                <th scope="col">Titre</th>
                <th scope="col">Supprimer l'enregistrement</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <th scope="row">#</th>
                        <td>{{ book.asin }}</td>
                        <td>
                            {% if book.bsr == 'no BSR' %}
                                <p class="text-danger font-weight-bold"> No BSR</p>
                            {% else %}
                                {{ book.bsr }}
                            {% endif %}
                        </td>
                        <td>{{ book.title }}</td>
                        <td>
                                    <form action="{{ path('book_delete', {'id' : book.id }) }}">
                                        <button class="btn btn-danger btn-sm">Supprimer l'entr√©e</button>
                                    </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}
